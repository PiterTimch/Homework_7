<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Beige">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock>Введіть телефон кому надсилати SMS:</TextBlock>
            <TextBox x:Name="recipientTB"></TextBox>
            <TextBlock>Введіть повідомлення</TextBlock>
            <TextBox x:Name="textTB"></TextBox>

            <Button x:Name="sendBT" Click="sendBT_Click">Надіслати</Button>
        </StackPanel>
    </Grid>
</Window>
